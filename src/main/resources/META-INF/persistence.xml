<!-- <persistence version="2.1" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence 
	http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd" xmlns="http://xmlns.jcp.org/xml/ns/persistence" 
